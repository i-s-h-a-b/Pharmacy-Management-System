<!-- views/updateDrug.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Drug</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .update-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #4caf50;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        a {
            display: block;
            margin-top: 10px;
            text-align: center;
            color: #333;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="update-form">
        <h1>Update Drug</h1>

        <form action="/updateDrug/<%= drug._id %>" method="post">
            <label for="drugName">Drug Name:</label>
            <input type="text" id="drugName" name="drugName" value="<%= drug.drugName %>" required>

            <label for="company">Company:</label>
            <input type="text" id="company" name="company" value="<%= drug.company %>" required>

            <label for="price">Price:</label>
            <input type="text" id="price" name="price" value="<%= drug.price %>" required>

            <label for="expiryDate">Expiry Date:</label>
            <input type="text" id="expiryDate" name="expiryDate" value="<%= drug.expiryDate %>" required>

            <label for="drugType">Drug Type:</label>
            <input type="text" id="drugType" name="drugType" value="<%= drug.drugType %>" required>

            <button type="submit">Update Drug</button>
        </form>

        <a href="/allDrugs">Go Back</a>
    </div>
</body>
</html>
